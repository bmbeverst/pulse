-- WorkoutExecution Table CRUD
CREATE TABLE WorkoutExecution (
  c_workout_execution_wet TEXT NOT NULL PRIMARY KEY,
  c_workout_wet TEXT NOT NULL,
  c_exercise_wet TEXT NOT NULL,
  i_order_index_wet INTEGER NOT NULL,
  i_value_wet INTEGER,
  d_recorded_at_wet TEXT NOT NULL,
  FOREIGN KEY(c_workout_wet) REFERENCES Workout(c_workout_wt),
  FOREIGN KEY(c_exercise_wet) REFERENCES Exercise(c_exercise_et)
);

insertWorkoutExecution:
INSERT INTO WorkoutExecution(c_workout_execution_wet, c_workout_wet, c_exercise_wet, i_order_index_wet, i_value_wet, d_recorded_at_wet)
VALUES (?, ?, ?, ?, ?, ?);

selectAllWorkoutExecutions:
SELECT * FROM WorkoutExecution;

selectWorkoutExecutionById:
SELECT * FROM WorkoutExecution WHERE c_workout_execution_wet = ?;

updateWorkoutExecution:
UPDATE WorkoutExecution
SET c_workout_wet = :c_workout_wet,
    c_exercise_wet = :c_exercise_wet,
    i_order_index_wet = :i_order_index_wet,
    i_value_wet = :i_value_wet,
    d_recorded_at_wet = :d_recorded_at_wet
WHERE c_workout_execution_wet = :c_workout_execution_wet;

deleteWorkoutExecution:
DELETE FROM WorkoutExecution WHERE c_workout_execution_wet = ?;

-- WorkoutSet Table CRUD
CREATE TABLE WorkoutSet (

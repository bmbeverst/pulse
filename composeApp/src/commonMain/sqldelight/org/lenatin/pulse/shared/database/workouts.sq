-- Workout Table CRUD
CREATE TABLE Workout (
  c_workout_wt TEXT NOT NULL PRIMARY KEY,
  d_date_wt TEXT NOT NULL,
  i_duration_minutes_wt INTEGER,
  t_notes_wt TEXT,
  b_achieve_wt INTEGER NOT NULL -- Boolean as INTEGER 0/1
);

insertWorkout:
INSERT INTO Workout(c_workout_wt, d_date_wt, i_duration_minutes_wt, t_notes_wt, b_achieve_wt)
VALUES (?, ?, ?, ?, ?);

selectAllWorkouts:
SELECT * FROM Workout;

selectWorkoutById:
SELECT * FROM Workout WHERE c_workout_wt = ?;

updateWorkout:
UPDATE Workout
SET d_date_wt = :d_date_wt, i_duration_minutes_wt = :i_duration_minutes_wt, t_notes_wt = :t_notes_wt, b_achieve_wt = :b_achieve_wt
WHERE c_workout_wt = :c_workout_wt;

deleteWorkout:
DELETE FROM Workout WHERE c_workout_wt = ?;

